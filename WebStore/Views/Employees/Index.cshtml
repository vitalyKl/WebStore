@model IEnumerable<WebStore.Models.Employee>

    <h3>Сотрудники магазина</h3>
    <hr/>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
            <tr>
                <td>@employee.Id </td>
                <td>@employee.Surname</td>
                <td>@employee.Name</td>
                <td>@employee.Patronomyc</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">
                        edit
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-controller="Home" asp-action="Index">На главную</a>
    </p>
