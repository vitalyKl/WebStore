@using WebStore.Services.Interfaces
@using WebStore.ViewModels
@inject IProductData ProductData
@{ 
    var products = ProductData
        .GetProducts()
        .Take(9)
        .Select(p => new ProductViewModel
        {
            Id = p.Id,
            Name = p.Name,
            Price = p.Price,
            ImageUrl = p.ImageUrl,
        });
}

<partial name="Partial/_Slider"/>
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
               <partial name="Partial/_LeftSideBar"/>
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturesItems" model="products"/>
                <!--features_items-->

                <partial name="Partial/_CategoryTab"/>
                <!--/category-tab-->

                <partial name="Partial/_RecomendedItems"/>
                <!--/recommended_items-->

            </div>
        </div>
    </div>
</section>